{
    "name": "Deep Live Cam GPU",
    "description": "Deep Live Cam installation with GPU support via CUDA (requires compatible Nvidia GPU)",
    "repository": "https://github.com/personthe/DLCP.git",
    "scripts": [
        {
            "name": "Install Dependencies (CUDA)",
            "shell": true,
            "script": [
                "python -m venv venv",
                "venv\\Scripts\\activate && pip install --upgrade pip",
                "venv\\Scripts\\activate && pip install -r requirements.txt",
                "venv\\Scripts\\activate && pip uninstall -y onnxruntime onnxruntime-gpu",
                "venv\\Scripts\\activate && pip install onnxruntime-gpu==1.16.3"
            ]
        },
        {
            "name": "Download Models (manual step)",
            "shell": true,
            "script": [
                "echo Please manually download GFPGANv1.4 and inswapper_128_fp16.onnx",
                "echo Place them in the models folder before running."
            ]
        },
        {
            "name": "Run Deep Live Cam (CUDA)",
            "shell": true,
            "script": [
                "venv\\Scripts\\activate && python run.py --execution-provider cuda"
            ]
        }
    ]
}
